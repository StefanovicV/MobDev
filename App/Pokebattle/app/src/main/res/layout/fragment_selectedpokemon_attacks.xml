<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.pxl.stefvrijens.pokebattle.SelectedpokemonAttacks">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/attackContainer1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/customborder"
            android:columnCount="4"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="5dp"
            android:paddingTop="0dp"
            android:rowCount="2">

            <TextView
                android:id="@+id/attack1Name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Earthquake"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/attack1PowerLabel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Power:" />

            <TextView
                android:id="@+id/attack1AccuracyLabel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Accuracy:" />

            <Button
                android:id="@+id/attack1EditButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_vertical"
                android:layout_rowSpan="2"
                android:layout_rowWeight="1"
                android:layout_weight="2"
                android:text="Edit" />

            <TextView
                android:id="@+id/attack1Type"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Ground" />

            <TextView
                android:id="@+id/attack1Power"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="100" />

            <TextView
                android:id="@+id/attack1Accuracy"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="100%" />

        </GridLayout>

        <GridLayout
            android:id="@+id/attackContainer2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="5dp"
            android:paddingTop="0dp"
            android:background="@drawable/customborder"
            android:columnCount="4"
            android:rowCount="2">

            <TextView
                android:id="@+id/attack2Name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Flamethrower"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/attack2PowerLabel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Power:" />

            <TextView
                android:id="@+id/attack2AccuracyLabel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Accuracy:" />

            <Button
                android:id="@+id/attack2EditButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_vertical"
                android:layout_rowSpan="2"
                android:layout_rowWeight="1"
                android:layout_weight="2"
                android:text="Edit" />

            <TextView
                android:id="@+id/attack2Type"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Fire" />

            <TextView
                android:id="@+id/attack2Power"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="90" />

            <TextView
                android:id="@+id/attack2Accuracy"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="100%" />

        </GridLayout>

        <GridLayout
            android:id="@+id/attackContainer3"
            android:layout_width="match_parent"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="5dp"
            android:paddingTop="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/customborder"
            android:columnCount="4"
            android:rowCount="2">

            <TextView
                android:id="@+id/attack3Name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Thunderbolt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/attack3PowerLabel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Power:" />

            <TextView
                android:id="@+id/attack3AccuracyLabel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Accuracy:" />

            <Button
                android:id="@+id/attack3EditButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_vertical"
                android:layout_rowSpan="2"
                android:layout_rowWeight="1"
                android:layout_weight="2"
                android:text="Edit" />

            <TextView
                android:id="@+id/attack3Type"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Electric" />

            <TextView
                android:id="@+id/attack3Power"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="70" />

            <TextView
                android:id="@+id/attack3Accuracy"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="100%" />

        </GridLayout>

        <GridLayout
            android:id="@+id/attackContainer4"
            android:layout_width="match_parent"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="5dp"
            android:paddingTop="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/customborder"
            android:columnCount="4"
            android:rowCount="2">

            <TextView
                android:id="@+id/attack4Name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Tackle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/attack4PowerLabel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Power:" />

            <TextView
                android:id="@+id/attack4AccuracyLabel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Accuracy:" />

            <Button
                android:id="@+id/attack4EditButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_vertical"
                android:layout_rowSpan="2"
                android:layout_rowWeight="1"
                android:layout_weight="2"
                android:text="Edit" />

            <TextView
                android:id="@+id/attack4Type"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Normal" />

            <TextView
                android:id="@+id/attack4Power"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="30" />

            <TextView
                android:id="@+id/attack4Accuracy"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="100%" />

        </GridLayout>

    </LinearLayout>
</FrameLayout>

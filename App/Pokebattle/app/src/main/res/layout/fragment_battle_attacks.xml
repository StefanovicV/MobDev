<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.pxl.stefvrijens.pokbattle.BattleAttacks">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9">

        <Button
            android:id="@+id/AttackButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            android:background="?attr/colorButtonNormal"
            android:text="Tackle" />

        <Button
            android:id="@+id/AttackButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            android:background="?attr/colorButtonNormal"
            android:text="Flamethrower" />

        <Button
            android:id="@+id/AttackButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            android:background="?attr/colorButtonNormal"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:text="Thunderbolt" />

        <Button
            android:id="@+id/AttackButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            android:background="?attr/colorButtonNormal"
            android:text="Water Gun" />

        <Button
            android:id="@+id/BackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Back" />

    </LinearLayout>
</FrameLayout>
